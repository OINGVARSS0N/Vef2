<%- include('header') -%>

<h1>Búa til nýjan flokk</h1>

<% if (errors.length > 0) { %>
  <ul>
    <% errors.forEach(error => { %>
      <li style="color: red;"><%= error %></li>
    <% }) %>
  </ul>
<% } %>

<form method="post" action="/form">
  
  <label for="category_name">Heiti flokks:</label>
  <input type="text" id="category_name" name="name" required>
  
  <label for="question_text">Spurning:</label>
  <textarea id="question_text" name="question" required></textarea>
  
  <label for="category_select">Veldu flokk:</label>
  <select id="category_select" name="category_id" required>
    <% categories.forEach(category => { %>
      <option value="<%= category.id %>"><%= category.name %></option>
    <% }) %>
  </select>

  <fieldset>
    <legend>Svör (veldu rétt svar)</legend>
    
    <label>
      <input type="radio" name="correct_answer" value="1" required> Rétt svar #1
      <input type="text" name="answer1" required>
    </label>
    
    <label>
      <input type="radio" name="correct_answer" value="2"> Rétt svar #2
      <input type="text" name="answer2" required>
    </label>

    <label>
      <input type="radio" name="correct_answer" value="3"> Rétt svar #3
      <input type="text" name="answer3" required>
    </label>
  </fieldset>

  <label>
    <input type="checkbox" name="confirm_terms" required> Ég samþykki skilmála
  </label>

  <button type="submit">Búa til flokk</button>
</form>

<%- include('footer') -%>
